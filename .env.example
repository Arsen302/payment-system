# Authentication Service
AUTH_PORT=50051
AUTH_POSTGRES_URL=postgres://[username]:[password]@[host]:5432/[database]?sslmode=disable
AUTH_REDIS_URL=redis://[host]:6379/0
AUTH_JWT_SECRET=[your-jwt-secret]
AUTH_JWT_EXPIRY_HOURS=24
AUTH_LOG_LEVEL=info
AUTH_GRPC_MAX_RECEIVE_MESSAGE_SIZE=4194304

# Payment Service
PAYMENT_PORT=50052
PAYMENT_POSTGRES_URL=postgres://[username]:[password]@[host]:5432/[database]?sslmode=disable
PAYMENT_KAFKA_BOOTSTRAP_SERVERS=[kafka-host]:9092
PAYMENT_KAFKA_TOPIC=payments
PAYMENT_LOG_LEVEL=info
PAYMENT_GRPC_MAX_RECEIVE_MESSAGE_SIZE=4194304

# Notification Service
NOTIFICATION_KAFKA_BOOTSTRAP_SERVERS=[kafka-host]:9092
NOTIFICATION_KAFKA_TOPIC=payments
NOTIFICATION_KAFKA_GROUP_ID=notification-service
NOTIFICATION_LOG_LEVEL=info

# PostgreSQL
POSTGRES_USER=[postgres-user]
POSTGRES_PASSWORD=[postgres-password]
POSTGRES_MULTIPLE_DATABASES=[db1],[db2] 